@model DevitoWebsite.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = " - Registracija";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h2>Registracija</h2>
<p>Podaci koje budete uneli u obrazac za registraciju će biti korišćeni kao podaci za dostavu. </p>
<hr />

<div class="row mt-5 mb-4">
    <div class="col-md-4 offset-md-2">

        <div asp-validation-summary="ModelOnly"></div>

        @using (Html.BeginForm("Register", "Account"))
        {
            <div class="form-group">
                <label asp-for="FirstName">Ime</label>
                <input asp-for="FirstName" type="text" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>

            </div>
            <div class="form-group">
                <label asp-for="LastName">Prezime</label>
                <input asp-for="LastName" type="text" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>

            </div>
            <div class="form-group">
                <label asp-for="Address">Adresa</label>
                <input asp-for="Address" type="text" class="form-control" />
                <span asp-validation-for="Address" class="text-warning"></span>

            </div>
            <div class="form-group">
                <label asp-for="PostalNumber">Poštanski broj</label>
                <input asp-for="PostalNumber" type="text" class="form-control" />
                <span asp-validation-for="PostalNumber" class="text-warning"></span>

            </div>

            <div class="form-group">
                <label asp-for="City">Grad</label>
                <input asp-for="City" type="text" class="form-control" />
                <span asp-validation-for="City" class="text-warning"></span>

            </div>

            <div class="form-group">
                <label asp-for="CountryId">Država</label>
                @Html.DropDownListFor(m => m.CountryId, new SelectList(Model.Country, "Id", "Title"), "Odaberite državu...", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Broj telefona</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>

            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>


            </div>

            <div class="form-group">
                <label asp-for="Password">Lozinka</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>

            </div>

            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Registruj me" class="btn btn-success" />
            </div>
        }

    </div>
    <div class="col-md-4 offset-md-2">
        <div class="text-center">
            <a class="navbar-brand" id="LogoRightColumn" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/lib/images/logo-large.png" class="img-fluid" />
            </a>

        </div>
    </div>
</div>
<hr />
<div class="row float-right">
    <div class="col">
        <p class="d-inline-block ">Već imate nalog? Prijavite se ovde: </p>
        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-info ml-1 btn-sm">Uloguj me</a>
    </div>
</div>

